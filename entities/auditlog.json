    },
    "provider_id": {
      "type": "string",
      "description": "Related provider ID if applicable"
    },
    "batch_id": {
      "type": "string",
      "description": "Related batch ID if applicable"
    },
    "changes": {
      "type": "object",
      "description": "Details of changes made"
    },
    "user_email": {
      "type": "string"
    },
    "user_role": {
      "type": "string"
    }
